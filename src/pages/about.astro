---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
// import { getAllProjects } from '@/lib/data-utils'
import { Icon } from 'astro-icon/components'

// const projects = await getAllProjects()

const certificates = [
  {
    name: 'CCST Cybersecurity',
    issuer: 'Cisco',
    status: 'Completed',
    icon: 'lucide:shield-check',
    link: 'https://www.credly.com/badges/dead65ef-bc02-4403-bfc6-e7a1b85f12a1',
  },
  {
    name: 'Microsoft AZ-900',
    issuer: 'Microsoft',
    status: 'Completed',
    icon: 'lucide:cloud',
    link: 'https://learn.microsoft.com/en-us/users/michalhinca/credentials/65c4ce96f659a465',
  },
]

const interests = [
  {
    category: 'CTF Competitions',
    description:
      'Competing with pingCTF and Mindcrafters teams, focusing on web exploitation and a bit of reverse engineering challenges.',
    icon: 'lucide:flag',
  },
  {
    category: 'Penetration Testing',
    description:
      'Exploring vulnerability assessment techniques and understanding how security weaknesses can be identified and exploited.',
    icon: 'lucide:shield',
  },
  {
    category: 'Computer Networking & Homelab',
    description:
      'Building and experimenting with network setups, learning protocols, and enjoying hands-on networking projects at home.',
    icon: 'lucide:network',
  },
  {
    category: 'Learning & Development',
    description:
      'Continuously expanding my technical skills through hands-on projects, practical experimentation, and solving real-world challenges.',
    icon: 'lucide:trending-up',
  },
]

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/ManFcG', icon: 'lucide:github' },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/michalhinca',
    icon: 'lucide:linkedin',
  },
  {
    name: 'CTFtime',
    url: 'https://ctftime.org/user/222716',
    icon: 'lucide:flag',
  },
]
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section>
    <!-- Hero Section with Photo -->
    <div
      class="from-card/50 via-card/50 mb-8 flex flex-col items-center gap-6 rounded-xl border bg-gradient-to-br to-blue-500/5 p-4 backdrop-blur-sm sm:flex-row"
    >
      <div class="flex-shrink-0">
        <img
          src="/avatar.png"
          alt="Micha≈Ç - ManFcG"
          class="h-24 w-24 rounded-xl object-cover sm:h-32 sm:w-32"
        />
      </div>
      <div class="text-center sm:text-left">
        <h1
          class="from-primary to-primary/80 mb-2 bg-gradient-to-r bg-clip-text text-2xl font-medium text-transparent sm:text-3xl"
        >
          Micha≈Ç "ManFcG" Hinca
        </h1>
        <p class="text-muted-foreground mb-1">ICT Student & CTF Player</p>
        <p class="text-muted-foreground text-sm">
          Vocational Technical High School for Telecommunications, Gda≈Ñsk
        </p>
      </div>
    </div>

    <div class="prose mb-8">
      <p class="mt-0">
        Hello! I am Micha≈Ç üëã I'm currently studying at Vocational Technical
        High School for Telecommunications in Gda≈Ñsk. In my free time I love to
        expand my knowledge in <strong>Cybersecurity</strong> and <strong
          >Computer Networking</strong
        > with a strong focus on <strong>Penetration Testing</strong>.
      </p>
      <p>
        I actively participate in <strong>CTF competitions</strong>, focusing on
        web exploitation and a little bit of reverse engineering. Nowadays you
        will see me playing with <Link
          href="https://knping.pl"
          external
          underline>pingCTF</Link
        > (as part of the Gda≈Ñsk University of Technology academic team) and
        <Link href="https://mindcrafters.xyz/members/ManFcG" external underline
          >Mindcrafters</Link
        >. I'm passionate about exploring the intersection of technology,
        security, and computer networking.
      </p>
    </div>

    <!-- Social Links -->
    <div class="mb-8">
      <div class="flex flex-wrap justify-center gap-3 sm:justify-start">
        {
          socialLinks.map((social) => (
            <Link
              href={social.url}
              external
              class="hover:bg-secondary/80 inline-flex items-center gap-2 rounded-lg border px-4 py-2 transition-all duration-300 hover:scale-105"
            >
              <Icon name={social.icon} class="size-4" />
              <span class="text-sm font-medium">{social.name}</span>
            </Link>
          ))
        }
      </div>
    </div>

    <!-- Interests Section -->
    <div class="mb-8">
      <h2 class="mb-4 text-2xl font-medium">Current Focus Areas</h2>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        {
          interests.map((interest) => (
            <div class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
              <div class="mb-2 flex items-start gap-3">
                <div class="bg-primary/10 flex h-6 w-6 flex-shrink-0 items-center justify-center rounded">
                  <Icon name={interest.icon} class="text-primary size-4" />
                </div>
                <h3 class="text-lg font-medium">{interest.category}</h3>
              </div>
              <p class="text-muted-foreground text-sm leading-relaxed">
                {interest.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Certificates Section -->
    <div class="mb-8">
      <h2 class="mb-4 text-2xl font-medium">Certifications</h2>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        {
          certificates.map((cert) => (
            <div class="hover:bg-secondary/50 rounded-xl border p-4 transition-colors duration-300 ease-in-out">
              <div class="flex items-center gap-4">
                <div class="text-2xl">
                  <Icon name={cert.icon} class="size-6" />
                </div>
                <div class="flex-1">
                  <h3 class="mb-1 font-medium">{cert.name}</h3>
                  <p class="text-muted-foreground mb-2 text-sm">
                    {cert.issuer}
                  </p>
                  <Link
                    href={cert.link}
                    external
                    class="bg-primary text-primary-foreground hover:bg-primary/90 inline-flex items-center gap-1 rounded-md px-3 py-1 text-xs font-medium transition-colors"
                  >
                    ‚úì Verify Certificate
                  </Link>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <p class="text-muted-foreground/80 text-xs mt-4">
      This site uses the <Link
        href="https://github.com/jktrn/astro-erudite/blob/f6dcc302d4492206f5f4cce94204290676c889e4/LICENSE"
        class="text-muted-foreground/60 hover:text-muted-foreground/80 transition-colors"
        external>astro-erudite template</Link>, licensed under MIT.
    </p>
  </section>
</Layout>
